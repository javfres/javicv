

<div class="timeline">

    <h2>Timeline</h2>

    <!-- Row with the jobs and icons -->
    <div class="row">
        {% for item in timeline %}

            <div class="block">
                <div class="title">{{ item.title }}</div>
                <div class="desc">{{ item.desc }}</div>
                <div class="icon">   
                    <span class="svg-primary">
                        <img src="icons/{{item.icon}}.svg">
                        {{  item.icon }}
                    </span>
                </div>
            </div>

        {% endfor %}
    </div>
    
    <!-- The color rounded boxes -->
    <div class="line">

        <div class="row ">
            {% for item in timeline %}

            <div class="block triangle">
                <div>
                    <img src="icons/triangle.svg">
                </div>
            </div>

            {% endfor %}
        </div>
    
        <div class="arrow">
            <img src="icons/arrow.svg">
        </div>
    
        <div class="box side"></div>

        <div class="main">
            {% for i in range(0, timeline.length-1) -%}
                <div class="box middle"></div>
            {%- endfor %}
        </div>

        <div class="box side"></div>

        <div class="arrow">
            <img src="icons/arrow.svg">
        </div>

    </div>

    <!-- Row with the years -->
    <div class="row">
        {% for item in timeline %}    
            <div class="block">
                <p class="year">{{ item.year }}</p>
            </div>
        {% endfor %}
    </div>


</div>