
<h2>Work experience</h2>

{% for job in experience %}

    <div class="job">
        <img class="logo" src="imgs/{{ job.logo }}">

        <div class="text">

            <div class="jheader">
                <div class="years">{{ job.start }}-{{ job.end if job.end else 'present' }}</div>
                <div class="place">{{ job.place }}</div>
            </div>


            <div class="content">

                {% if job.description %}
                    {{ job.description }}
                {% endif %}

                {% for position in job.positions %}

                    <div class="title">
                        <span class="position">{{ position.title }}</span>
                        @ {{ job.company }}

                        <div class="tags">
                            {% for tag in position.tags %}
                                <div class="tag">{{ tag }}</div>
                            {% endfor %}
                        </div>
                    </div>

                    <div class="content">
                        {{ position.description }}
                    </div>

                {% endfor %}

            </div>

        </div>
    </div>

{% endfor %}