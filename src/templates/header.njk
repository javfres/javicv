
<div class="header">

    <!-- My photo -->
    <img class="me" src="imgs/me.jpg">

    <!-- Name and title -->
    <div class="text">

        <h1>{{ name }}</h1>

        <div class="titles">
            {% for text in titles %}
                <p>{{ text }}</p>
            {% endfor %}
        </div>

    </div>

    <!-- Contact links -->
    <div class="links">

        {% for link in links %}

            <div class="link">
                <a href="{{ link.href }}">
                    <span class="svg-primary">
                        {{ inlineSVG('icons/' + link.icon +'.svg') | safe }}
                    </span>
                    {{ link.text }}
                </a>
            </div>   

        {% endfor %}
    </div>

</div>   
