{
  "name": "javicv",
  "version": "2.0.0",
  "description": "My CV",
  "main": "index.js",
  "scripts": {
    "tsc": "tsc",
    "tsc-watch": "tsc -w",
    "build": "tsc && npm run pdf",
    "pdf": "node build/index.js",
    "pdf-watch": "nodemon --ext js,scss,njk  --exec \"npm run pdf\"",
    "dev": "concurrently -k -n \"TypeScript,Node PDF\" -c \"yellow.bold,cyan.bold\" \"npm run tsc-watch\" \"npm run pdf-watch\""
  },
  "keywords": [
    "CV",
    "Resume"
  ],
  "author": "javfres",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^5.0.0",
    "dist-exiftool": "^10.53.0",
    "gradient-color": "^2.0.1",
    "node-exiftool": "^2.3.0",
    "nodemon": "^2.0.0",
    "nunjucks": "^3.2.0",
    "puppeteer": "^2.0.0",
    "sass": "^1.23.7",
    "typescript": "^3.7.2"
  },
  "devDependencies": {
    "@types/node": "^12.12.9",
    "@types/nunjucks": "^3.1.3",
    "@types/puppeteer": "^2.0.0",
    "@types/sass": "^1.16.0",
    "tsc-watch": "^4.0.0"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "html,css,svg,js"
    }
  }
}
